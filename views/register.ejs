<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="/styles/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/header.css" type="text/css">
    <link rel="stylesheet" href="/styles/register.css" type="text/css">
    <link rel="stylesheet" href="/styles/footer.css" type="text/css">
    <script type="text/javascript" src="/jq.js"></script>
    <script type="text/javascript" src="/register.js"></script>
    <title>Регистрация</title>
</head>

<body>
    <!-- ХЕДЕР -->
    <%- include(header)%>

    <!-- Основная часть сайта-->
    <div class="main-fluid container-fluid">
        <div class="main-container container">
            <div class="row">
                <div class="left-space col-4">
                </div>
                <div class="registration-form-containter col-4">
                    <h4>Форма для регистрации</h4>

                    <form class="registration-form">
                        <label>Фамилия</label><br>
                        <input class="register-input" name='last-name' type="text" placeholder="Иванов" required><br>
                        <label>Имя</label><br>
                        <input class="register-input" name='first-name' type="text" placeholder="Иван" required><br>
                        <label>Логин</label><br>
                        <input class="register-input" name='login' type="text" placeholder="Никнейм" required><br>
                        <label>Электронная почта</label><br>
                        <input class="register-input" name='email' type="text" placeholder="example@mail.ru" required><br>
                        <label>Пароль</label><br>
                        <input class="register-input" name='password' type="password" placeholder="Введите пароль" required><br>
                        <label>Подтверждение пароля</label><br>
                        <input class="register-input" name='password-check' type="password" placeholder="Подтвердите пароль" required><br>
                        <input class="submit-input" type="button" value="Зарегистрироваться">
                    </form>
                    <div class="ajax-status">

                    </div>
                </div>
                <div class="right-space col-4">
                </div>
            </div>
        </div>
    </div>

    <!-- ФУТЕР -->
    <%- include(footer)%>

</body>

</html>